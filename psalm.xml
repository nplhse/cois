<?xml version="1.0"?>
<psalm
    errorLevel="4"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <fileExtensions>
        <extension name=".php" />
        <extension name=".twig" checker="./vendor/psalm/plugin-symfony/src/Twig/TemplateFileAnalyzer.php"/>
    </fileExtensions>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress">
                <directory name="src/EventSubscriber" />
                <directory name="src/Repository" />
            </errorLevel>
        </LessSpecificImplementedReturnType>
        <MethodSignatureMismatch>
            <errorLevel type="suppress">
                <directory name="src/Repository" />
            </errorLevel>
        </MethodSignatureMismatch>
        <NullableReturnStatement>
            <errorLevel type="suppress">
                <file name="src/Entity/Comment.php" />
                <file name="src/EventSubscriber/AuditSubscriber.php" />
            </errorLevel>
        </NullableReturnStatement>
        <InvalidReturnStatement>
            <errorLevel type="suppress">
                <file name="src/EventSubscriber/AuditSubscriber.php" />
            </errorLevel>
        </InvalidReturnStatement>
        <InvalidReturnType>
            <errorLevel type="suppress">
                <file name="src/EventSubscriber/AuditSubscriber.php" />
            </errorLevel>
        </InvalidReturnType>
        <InvalidScalarArgument>
            <errorLevel type="suppress">
                <directory name="src/Controller/Settings/" />
            </errorLevel>
        </InvalidScalarArgument>
        <InvalidNullableReturnType>
            <errorLevel type="suppress">
                <file name="src/Entity/Comment.php" />
            </errorLevel>
        </InvalidNullableReturnType>
        <ImplementedReturnTypeMismatch>
            <errorLevel type="suppress">
                <directory name="src/Factory/" />
            </errorLevel>
        </ImplementedReturnTypeMismatch>
        <ImplementedParamTypeMismatch>
            <errorLevel type="suppress">
                <directory name="src/Factory/" />
            </errorLevel>
        </ImplementedParamTypeMismatch>
        <UndefinedMagicMethod>
            <errorLevel type="suppress">
                <file name="src/Controller/Api/ApiController.php" />
                <file name="src/Controller/StatisticsController.php" />
            </errorLevel>
        </UndefinedMagicMethod>
    </issueHandlers>
</psalm>
