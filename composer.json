{
    "name": "nplhse/cois",
    "description": "A tool for collaborative IVENA statistics",
    "type": "project",
    "homepage": "https://github.com/nplhse/cois/",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Steltner",
            "email": "mail@nplhse.com",
            "homepage": "http://nplhse.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/nplhse/cois/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "composer/package-versions-deprecated": "1.*",
        "doctrine/annotations": "^1.0",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "friendsofsymfony/ckeditor-bundle": "^2.4",
        "league/commonmark": "^2.2",
        "league/csv": "^9.6",
        "league/flysystem": "^3.0",
        "league/flysystem-bundle": "^2.0",
        "markrogoyski/math-php": "^2.0",
        "neitanod/forceutf8": "^2.0",
        "nesbot/carbon": "^2.53",
        "phpdocumentor/reflection-docblock": "^5.2",
        "sensio/framework-extra-bundle": "^6.0",
        "symfony/asset": "6.0.*",
        "symfony/console": "6.0.*",
        "symfony/doctrine-messenger": "6.0.*",
        "symfony/dotenv": "6.0.*",
        "symfony/expression-language": "6.0.*",
        "symfony/flex": "^2.0.1",
        "symfony/form": "6.0.*",
        "symfony/framework-bundle": "6.0.*",
        "symfony/http-client": "6.0.*",
        "symfony/intl": "6.0.*",
        "symfony/mailer": "6.0.*",
        "symfony/messenger": "6.0.*",
        "symfony/mime": "6.0.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/notifier": "6.0.*",
        "symfony/process": "6.0.*",
        "symfony/property-access": "6.0.*",
        "symfony/property-info": "6.0.*",
        "symfony/proxy-manager-bridge": "6.0.*",
        "symfony/security-bundle": "6.0.*",
        "symfony/serializer": "6.0.*",
        "symfony/stopwatch": "^6.0",
        "symfony/string": "6.0.*",
        "symfony/translation": "6.0.*",
        "symfony/twig-bundle": "^6.0",
        "symfony/ux-dropzone": "^2.0",
        "symfony/ux-live-component": "^2.0",
        "symfony/validator": "6.0.*",
        "symfony/web-link": "6.0.*",
        "symfony/webpack-encore-bundle": "^1.9",
        "symfony/yaml": "6.0.*",
        "symfonycasts/reset-password-bundle": "^1.4",
        "symfonycasts/verify-email-bundle": "^1.2",
        "twig/cssinliner-extra": "^3.3",
        "twig/extra-bundle": "^3.3",
        "twig/inky-extra": "^3.3",
        "twig/intl-extra": "^3.3",
        "twig/markdown-extra": "^3.3",
        "twig/string-extra": "^3.3",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.7",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.2",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpunit/phpunit": "^9",
        "psalm/plugin-symfony": "^3.0",
        "rector/rector": "^0.12.8",
        "symfony/browser-kit": "^6.0",
        "symfony/css-selector": "^5.2",
        "symfony/debug-bundle": "^6.0",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/requirements-checker": "^2.0",
        "symfony/var-dumper": "^5.2",
        "symfony/web-profiler-bundle": "^6.0",
        "symplify/easy-coding-standard": "^10.0",
        "vimeo/psalm": "^4.7",
        "weirdan/doctrine-psalm-plugin": "^2.0",
        "zenstruck/browser": "^0.9.2",
        "zenstruck/foundry": "^1.16"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "requirements-checker": "script",
            "ckeditor:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "ci": [
            "@run-checks",
            "@run-tests"
        ],
        "reset": [
            "@composer install",
            "bin/console doctrine:database:drop --force",
            "bin/console doctrine:database:create",
            "@setup-dev"
        ],
        "run-checks": [
            "@run-checks-js",
            "@run-checks-php"
        ],
        "run-checks-js": [
            "yarn run eslint assets",
            "yarn run prettier --check ."
        ],
        "run-checks-php": [
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/psalm",
            "vendor/bin/phpstan analyse"
        ],
        "run-tests": [
            "vendor/bin/phpunit"
        ],
        "setup": [
            "@setup-db",
            "bin/console app:settings:load",
            "@setup-frontend"
        ],
        "setup-db": [
            "bin/console doctrine:migrations:migrate --no-interaction"
        ],
        "setup-dev": [
            "@setup-db",
            "bin/console doctrine:fixtures:load --no-interaction",
            "bin/console app:settings:load",
            "@setup-frontend"
        ],
        "setup-frontend": [
            "yarn install",
            "yarn encore dev"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^6.0"
        }
    }
}
