<h1>
    {{ 'security.requestMail.title'|trans }}
</h1>

<p>
    {{ 'security.requestMail.message'|trans }}
    To reset your password, please visit the following link
</p>

<a href="{{
    url(
        'app_reset_password',
        {
            token: resetToken.token
        }
    )
    }}">
    {{
        url(
            'app_reset_password',
            {
                token: resetToken.token
            }
        )
    }}
</a>

<p>
    {{ 'security.requestMail.expiration'|trans }}
    {{
        resetToken.expirationMessageKey|trans(
            resetToken.expirationMessageData,
            'ResetPasswordBundle'
        )
    }}.
</p>
