{% block navbar %}
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark sticky-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('default') }}">
                    Collaborative IVENA statistics
                </a>
                <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse"
                    id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            {% if
                                app.request.attributes.get('_route')
                                    starts with 'hospital' %}
                                <a class="nav-link active"
                                    aria-current="page"
                                    href="{{ path('hospital_index') }}">
                                    Hospitals
                                </a>
                            {% else %}
                                <a class="nav-link"
                                    aria-current="page"
                                    href="{{ path('hospital_index') }}">
                                    Hospitals
                                </a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if
                                app.request.attributes.get('_route')
                                    starts with 'allocation' %}
                                <a class="nav-link active"
                                    aria-current="page"
                                    href="{{ path('allocation_index') }}">
                                    Allocations
                                </a>
                            {% else %}
                                <a class="nav-link"
                                    aria-current="page"
                                    href="{{ path('allocation_index') }}">
                                    Allocations
                                </a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if
                                app.request.attributes.get('_route')
                                    starts with 'statistics' %}
                                <a class="nav-link active"
                                    aria-current="page"
                                    href="{{ path('statistics_index') }}">
                                    Statistics
                                </a>
                            {% else %}
                                <a class="nav-link"
                                    aria-current="page"
                                    href="{{ path('statistics_index') }}">
                                    Statistics
                                </a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if
                                app.request.attributes.get('_route')
                                    starts with 'import' %}
                                <a class="nav-link active"
                                    aria-current="page"
                                    href="{{ path('import_index') }}">
                                    Import
                                </a>
                            {% else %}
                                <a class="nav-link"
                                    aria-current="page"
                                    href="{{ path('import_index') }}">
                                    Import
                                </a>
                            {% endif %}
                        </li>
                        <li class="">
                            <a class="nav-link disabled">Export</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="nav-item dropdown">
                                {% if is_granted('IS_IMPERSONATOR') %}
                                    <a class="nav-link dropdown-toggle text-warning"
                                        href="#"
                                        id="navbarDropdown"
                                        role="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        Logged in as: {{ app.user.username }}
                                    </a>
                                {% else %}
                                    <a class="nav-link dropdown-toggle"
                                        href="#"
                                        id="navbarDropdown"
                                        role="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        Logged in as: {{ app.user.username }}
                                    </a>
                                {% endif %}
                                <ul class="dropdown-menu"
                                    aria-labelledby="navbarDropdown">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            <a class="dropdown-item"
                                                href="{{ path('admin') }}">
                                                <i class="bi-gear-fill"></i> Administration
                                            </a>
                                        </li>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') %}
                                        <li>
                                            <a class="dropdown-item"
                                                href="{{ path('account') }}">
                                                <i class="bi-person-circle"></i>
                                                My account
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    {% endif %}
                                    {% if is_granted('IS_IMPERSONATOR') %}
                                        <li>
                                            <a class="dropdown-item text-danger"
                                                href="{{
                                                impersonation_exit_path(
                                                    path('account')
                                                )
                                                }}">
                                                <i class="bi-door-closed-fill">

                                                </i> Exit impersonation
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                    {% endif %}
                                    <li>
                                        <a class="dropdown-item"
                                            href="{{ path('app_logout') }}">
                                            <i class="bi-power"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link"
                                    aria-current="page"
                                    href="{{ path('app_login') }}">
                                    Login
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}
