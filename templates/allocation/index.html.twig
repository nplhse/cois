{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}
{% import '_elements/macro/table.html.twig' as table %}

{% block title %}
    {{ 'Allocations'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            label: 'Allocations'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="float-end"
                data-controller="toggle"
                data-toggle-target-value="alloc-sidebar"
                data-toggle-url-value="{{ path('app_api_toggle') }}">
                <a class="btn btn-primary"
                    data-bs-toggle="collapse"
                    data-action="toggle#switch"
                    href="#collapseFilters"
                    role="button"
                    aria-expanded="{{ app.user.ToggleAllocSidebar }}"
                    aria-controls="collapseFilters">
                    <i class="bi bi-sliders"></i> {{ 'Toggle Options'|trans }}
                </a>
            </div>

            <h1>
                {{ 'Allocations'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Allocations'|trans({
                        '%perPage%': pages.perPage,
                        '%count%': allocations.count|number_format(0, '', '.')
                    })
                }}
            </p>

            {% if filters.search %}
                <div class="alert alert-info" role="alert">
                    {{ 'Searching for'|trans }}: "<i>{{ filters.search }}</i>" | <a href="{{
                        path(
                            'app_allocation_index',
                            app.request.query.all|merge({
                                search: '',
                                page: 1
                            })
                        )
                        }}">
                        {{ 'Click here to end search'|trans }}
                    </a>
                </div>
            {% endif %}

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        {{
                            table.sortableThead(
                                'dispatchArea',
                                filters.sortBy,
                                filters.orderBy,
                                'app_allocation_index',
                                'Dispatch Area'|trans({}, 'forms')
                            )
                        }}
                        <th>
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        {{
                            table.sortableThead(
                                'time',
                                filters.sortBy,
                                filters.orderBy,
                                'app_allocation_index',
                                'Times'|trans({}, 'forms'),
                                true
                            )
                        }}
                        {% if
                            filters.sortBy == 'age' or filters.sortBy == null %}
                            {{
                                table.sortableThead(
                                    'age',
                                    filters.sortBy,
                                    filters.orderBy,
                                    'app_allocation_index',
                                    'Age'|trans({}, 'forms')
                                )
                            }}
                        {% elseif filters.sortBy == 'gender' %}
                            {{
                                table.sortableThead(
                                    'gender',
                                    filters.sortBy,
                                    filters.orderBy,
                                    'app_allocation_index',
                                    'Gender'|trans({}, 'forms')
                                )
                            }}
                        {% else %}
                            {{
                                table.sortableThead(
                                    'age',
                                    filters.sortBy,
                                    filters.orderBy,
                                    'app_allocation_index',
                                    'Age'|trans({}, 'forms')
                                )
                            }}
                        {% endif %}
                        {{
                            table.sortableThead(
                                'urgency',
                                filters.sortBy,
                                filters.orderBy,
                                'app_allocation_index',
                                'Urgency'|trans({}, 'forms')
                            )
                        }}
                        <th>
                            {{ 'Dispatch'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Properties'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for allocation in allocations %}
                        {% if allocation.specialityWasClosed == false %}
                            {% set class = '' %}
                        {% else %}
                            {% set class = 'table-warning' %}
                        {% endif %}

                        <tr class="{{ class }}">
                            <td>
                                <a href="{{
                                    path(
                                        'app_allocation_show',
                                        {
                                            id: allocation.id
                                        }
                                    )
                                    }}">
                                    <i class="bi bi-search"></i><br />
                                    <small>
                                        {{ 'View'|trans({}, 'forms') }}
                                    </small>
                                </a>
                            </td>
                            <td>
                                {{
                                    allocation.dispatchArea|replace({
                                        Leitstelle: ''
                                    })
                                }}
                            </td>
                            <td>
                                <a href="{{
                                    path(
                                        'app_hospital_show',
                                        {
                                            id: allocation.hospital.id
                                        }
                                    )
                                    }}">
                                    {{ allocation.hospital.name }}
                                </a>
                            </td>
                            <td>
                                <p>
                                    {{
                                        allocation.createdAt|date(
                                            'd.m.y H:i',
                                            'Europe/Berlin'
                                        )
                                    }}<br />
                                    {{
                                        allocation.arrivalAt|date(
                                            'd.m.y H:i',
                                            'Europe/Berlin'
                                        )
                                    }}
                                </p>
                            </td>
                            <td>
                                <p>
                                    {{ allocation.gender }}<br />
                                    {{ allocation.age }}
                                </p>
                            </td>
                            <td>
                                {% if allocation.SK == '1' %}
                                    <p class="text-danger fw-bold">
                                        {{ allocation.SK }}
                                    </p>
                                {% elseif allocation.SK == '2' %}
                                    <p class="text-warning fw-bold">
                                        {{ allocation.SK }}
                                    </p>
                                {% else %}
                                    <p class="text-success fw-bold">
                                        {{ allocation.SK }}
                                    </p>
                                {% endif %}
                            </td>
                            <td>
                                <p>
                                    <strong>{{ allocation.speciality }}</strong><br />
                                    {{ allocation.RMI }} {{ allocation.PZCText }}
                                </p>
                            </td>
                            <td>
                                <span class="text-danger fw-bold">
                                    {% if allocation.requiresResus %}
                                        {{ 'S+'|trans }}
                                    {% endif %}
                                    {% if allocation.requiresCathlab %}
                                        {{ 'H+'|trans }}
                                    {% endif %}
                                    {% if allocation.isCPR %}
                                        {{ 'R+'|trans }}
                                    {% endif %}
                                    {% if allocation.isVentilated %}
                                        {{ 'B+'|trans }}
                                    {% endif %}
                                    {% if allocation.isWithPhysician %}
                                        {{ 'N+'|trans }}
                                    {% endif %}
                                    {% if allocation.isWorkAccident %}
                                        {{ 'BG+'|trans }}
                                    {% endif %}
                                    {% if allocation.isPregnant %}
                                        {{ 'Pregnant'|trans }}
                                    {% endif %}
                                </span><br />
                                <span class="text-warning">
                                    {% if allocation.isInfectious == 'Keine' %}

                                    {% else %}
                                        {{ allocation.isInfectious }}
                                    {% endif %}
                                </span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">
                                {{ 'No Allocations found'|trans({}, 'forms') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                            'Showing Page page of pages'|trans({
                                '%page%': pages.page,
                                '%pages%': pages.last|number_format(0, '', '.')
                            })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                        pagination.navbar(
                            pages.last,
                            pages.page,
                            pages.previous,
                            pages.next
                        )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_hospital_index') }}
                </div>
            </div>
        </div>

        {% if app.user.ToggleAllocSidebar %}
            {% set class = 'col-3 collapse show' %}
        {% else %}
            {% set class = 'col-3 collapse' %}
        {% endif %}

        <div class="{{ class }}" id="collapseFilters">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-funnel"></i>
                    {{ 'Filters'|trans({}, 'forms') }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Search'|trans }}
                    </h5>

                    {{ filter.search(filters.search) }}

                    <h5 class="card-title">
                        {{ 'Filter by SupplyArea'|trans }}
                    </h5>
                    <p>
                        <select class="form-select"
                            name="supplyArea"
                            aria-label="filterSupplyArea">
                            {% if filters.supplyArea == null %}
                                <option value="" selected>
                                    {{
                                        'Filter by Supply Area'|trans(
                                            {},
                                            'forms'
                                        )
                                    }}
                                </option>
                            {% else %}
                                <option value="">
                                    {{
                                        'Stop filtering by Supply Area'|trans(
                                            {},
                                            'forms'
                                        )
                                    }}
                                </option>
                            {% endif %}
                            {% for item in supplyAreas %}
                                {% if
                                    item.element == filters.supplyArea
                                        and item.element != '' %}
                                    <option value="{{ item.element }}" selected>
                                        {{ item.element }}
                                    </option>
                                {% elseif
                                    item.element == ''
                                        or item.element == null %}
                                    <!-- empty -->
                                {% else %}
                                    <option value="{{ item.element }}">
                                        {{ item.element }}
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </p>

                    <h5 class="card-title">
                        {{ 'Filter by DispatchArea'|trans }}
                    </h5>
                    <p>
                        <select class="form-select"
                            name="dispatchArea"
                            aria-label="filterDispatchArea">
                            {% if filters.dispatchArea == null %}
                                <option value="" selected>
                                    {{
                                        'Filter by Dispatch Area'|trans(
                                            {},
                                            'forms'
                                        )
                                    }}
                                </option>
                            {% else %}
                                <option value="">
                                    {{
                                        'Stop filtering by Dispatch Area'|trans(
                                            {},
                                            'forms'
                                        )
                                    }}
                                </option>
                            {% endif %}
                            {% for item in dispatchAreas %}
                                {% if
                                    item.element == filters.dispatchArea
                                        and item.element != '' %}
                                    <option value="{{ item.element }}" selected>
                                        {{ item.element }}
                                    </option>
                                {% elseif
                                    item.element == ''
                                        or item.element == null %}
                                    <!-- empty -->
                                {% else %}
                                    <option value="{{ item.element }}">
                                        {{ item.element }}
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </p>

                    <form>
                        {% if is_granted('ROLE_ADMIN') %}
                            <h5 class="card-title">
                                {{ 'Filter by Hospital'|trans }}
                            </h5>
                            <p class="mb-2">
                                <select class="form-select"
                                    name="hospital"
                                    aria-label="filterHospital">
                                    {% if filters.hospital == null %}
                                        <option value="" selected>
                                            {{
                                                'Filter by Hospital'|trans(
                                                    {},
                                                    'forms'
                                                )
                                            }}
                                        </option>
                                    {% else %}
                                        <option value="">
                                            {{
                                                'Stop filtering by Hospital'|trans(
                                                    {},
                                                    'forms'
                                                )
                                            }}
                                        </option>
                                    {% endif %}
                                    {% for hospital in hospitals %}
                                        {% if hospital.id == filters.hospital %}
                                            <option value="{{ hospital.id }}"
                                                selected>
                                                {{ hospital.name }}
                                            </option>
                                        {% else %}
                                            <option value="{{ hospital.id }}">
                                                {{ hospital.name }}
                                            </option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </p>
                        {% elseif app.user.hospital %}
                            <h5 class="card-title">
                                {{ 'Filter by Hospital'|trans }}
                            </h5>
                            <p class="mb-2">
                                {% if
                                    app.user.hospital.id == filters.hospital %}
                                    <div class="form-check form-switch">
                                        <input class="form-check-input"
                                            type="checkbox"
                                            name="hospital"
                                            checked="checked"
                                            value="" />
                                        <label class="form-check-label"
                                            for="flexSwitchCheckDefault">
                                            {{
                                                'Show only Allocations from your hospital'|trans
                                            }}
                                        </label>
                                    </div>
                                {% else %}
                                    <div class="form-check form-switch">
                                        <input class="form-check-input"
                                            type="checkbox"
                                            name="hospital"
                                            value="{{
                                            app.user.hospital.id
                                            }}" />
                                        <label class="form-check-label"
                                            for="flexSwitchCheckDefault">
                                            {{
                                                'Show only Allocations from your hospital'|trans
                                            }}
                                        </label>
                                    </div>
                                {% endif %}
                            </p>
                        {% endif %}

                        <h5 class="card-title">
                            {{ 'Filter by Dates'|trans }}
                        </h5>
                        <div class="input-group mb-3">
                            <input type="date"
                                name="start"
                                class="form-control"
                                value="{{ filters.startDate }}"
                                aria-label="{{ 'Start Date'|trans }}" />
                            <input type="date"
                                name="end"
                                class="form-control"
                                value="{{ filters.endDate }}"
                                aria-label="{{ 'End Date'|trans }}" />
                        </div>

                        <h5 class="card-title">
                            {{ 'Filter by Speciality'|trans }}
                        </h5>
                        <p>
                            <select class="form-select"
                                name="speciality"
                                aria-label="filterSpeciality">
                                {% if filters.speciality == null %}
                                    <option value="" selected>
                                        {{
                                            'Filter by Speciality'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by Speciality'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in specialities %}
                                    {% if
                                        item.speciality == filters.speciality
                                            and item.speciality != '' %}
                                        <option value="{{ item.speciality }}"
                                            selected>
                                            {{ item.speciality }}
                                        </option>
                                    {% elseif
                                        item.speciality == ''
                                            or item.speciality == null %}
                                        <!-- empty -->
                                    {% else %}
                                        <option value="{{ item.speciality }}">
                                            {{ item.speciality }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </p>
                        <p>
                            <select class="form-select"
                                name="specialityDetail"
                                aria-label="filterSpecialityDetail">
                                {% if filters.specialityDetail == null %}
                                    <option value="" selected>
                                        {{
                                            'Filter by Speciality Detail'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by Speciality Detail'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in specialityDetails %}
                                    {% if
                                        item.specialityDetail
                                            == filters.specialityDetail
                                            and item.specialityDetail != '' %}
                                        <option value="{{
                                            item.specialityDetail
                                            }}"
                                            selected>
                                            {{ item.specialityDetail }}
                                        </option>
                                    {% elseif
                                        item.specialityDetail == ''
                                            or item.specialityDetail == null %}
                                        <!-- empty -->
                                    {% else %}
                                        <option value="{{
                                            item.specialityDetail
                                            }}">
                                            {{ item.specialityDetail }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </p>

                        <h5 class="card-title">
                            {{ 'Filter by Properties'|trans }}
                        </h5>
                        <p>
                            <select class="form-select"
                                name="pzc"
                                aria-label="filterPZC">
                                {% if filters.pzc == null %}
                                    <option value="" selected>
                                        {{ 'Filter by PZC'|trans({}, 'forms') }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by PZC'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in PZCs %}
                                    {% if item.PZC == filters.pzc %}
                                        <option value="{{ item.PZC }}" selected>
                                            {{ item.PZC }}
                                            {{ item.PZCText }}
                                        </option>
                                    {% elseif
                                        item.PZC == 0 or item.PZCText == null %}
                                        <!-- empty -->
                                    {% else %}
                                        <option value="{{ item.PZC }}">
                                            {{ item.PZC }}
                                            {{ item.PZCText }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </p>

                        <p>
                            <select class="form-select"
                                name="urgency"
                                aria-label="filterUrgency">
                                {% if filters.urgency == null %}
                                    <option value="" selected>
                                        {{
                                            'Filter by Urgency'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by Urgency'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in urgencies %}
                                    {% if
                                        item.urgency == filters.urgency
                                            and item.urgency != '' %}
                                        <option value="{{ item.urgency|url_encode }}"
                                            selected>
                                            {{ item.urgency }}
                                        </option>
                                    {% elseif
                                        item.urgency == 'SK'
                                            or item.urgency == null %}
                                        <!-- empty -->
                                    {% else %}
                                        <option value="{{ item.urgency|url_encode }}">
                                            {{ item.urgency }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </p>

                        <p>
                            <div class="form-check form-switch">
                                {% if filters.reqResus %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="reqResus"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="reqResus" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Requires Resuscitation'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.reqCath %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="reqCath"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="reqCath" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Requires Cathlab'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isCPR %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isCPR"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isCPR" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is CPR'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isVent %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isVent"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isVent" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is Ventilated'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isShock %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isShock"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isShock" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is Shock'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isWithDoc %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isWithDoc"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isWithDoc" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is with Physician'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isPreg %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isPreg"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isPreg" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is Pregnant'|trans }}
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                {% if filters.isWork %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isWork"
                                        checked="checked" />
                                {% else %}
                                    <input class="form-check-input"
                                        type="checkbox"
                                        name="isWork" />
                                {% endif %}
                                <label class="form-check-label"
                                    for="flexSwitchCheckDefault">
                                    {{ 'Is Work Accident'|trans }}
                                </label>
                            </div>
                        </p>

                        {% if filters.sortBy %}
                            <input type="hidden"
                                id="sortBy"
                                name="sortBy"
                                value="{{ filters.sortBy }}" />
                        {% endif %}
                        {% if filters.orderBy %}
                            <input type="hidden"
                                id="orderBy"
                                name="orderBy"
                                value="{{ filters.orderBy }}" />
                        {% endif %}

                        <h5 class="card-title">
                            {{ 'Filter by Transport'|trans }}
                        </h5>
                        <p>
                            <select class="form-select"
                                name="assignment"
                                aria-label="filterAssignment">
                                {% if filters.assignment == null %}
                                    <option value="" selected>
                                        {{
                                            'Filter by Assignment'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by Assignment'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in assignments %}
                                    {% if
                                        item.assignment == filters.assignment
                                            and item.assignment != '' %}
                                        <option value="{{ item.assignment|url_encode }}"
                                            selected>
                                            {{ item.assignment }}
                                        </option>
                                    {% elseif
                                        item.assignment == 0
                                            or item.assignment == null %}
                                        <!-- empty -->
                                    {% else %}
                                        <option value="{{ item.assignment|url_encode }}">
                                            {{ item.assignment }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </p>
                        <p>
                            <select class="form-select"
                                name="occasion"
                                aria-label="filterOccasion">
                                {% if filters.occasion == null %}
                                    <option value="" selected>
                                        {{
                                            'Filter by Occasion'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% else %}
                                    <option value="">
                                        {{
                                            'Stop filtering by Occasion'|trans(
                                                {},
                                                'forms'
                                            )
                                        }}
                                    </option>
                                {% endif %}
                                {% for item in occasions %}
                                    {% if
                                        item.occasion == filters.occasion
                                            and item.occasion != '' %}
                                        <option value="{{ item.occasion|url_encode }}"
                                            selected>
                                            {{ item.occasion }}
