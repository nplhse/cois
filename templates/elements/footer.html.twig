{% block footer %}
    <footer class="p-4 mt-auto border-top bg-light">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5">
            <div class="col mb-3">
                <p class="small">
                    {{ 'welcome.text'|trans }}
                </p>
                {% if app_social %}
                    <p style="font-size: 1.25em">
                        {{ 'footer.social'|trans }}:{% if app_social_github %}
                            <a href="https://github.com/{{ app_social_github }}"
                                class="text-black">
                                <i class="bi-github"
                                    role="img"
                                    aria-label="GitHub">

                                </i>
                            </a>
                        {% endif %}
                        {% if app_social_mastodon %}
                            <a href="https://mastodon.social/@{{
                                app_social_mastodon
                                }}"
                                class="text-black">
                                <i class="bi-mastodon"
                                    role="img"
                                    aria-label="Mastodon">

                                </i>
                            </a>
                        {% endif %}
                        {% if app_social_twitter %}
                            <a href="https://twitter.com/{{
                                app_social_twitter
                                }}"
                                class="text-black">
                                <i class="bi-twitter"
                                    role="img"
                                    aria-label="Twitter">

                                </i>
                            </a>
                        {% endif %}
                    </p>
                {% endif %}
            </div>

            <div class="col mb-3"></div>

            <div class="col mb-3">
                <h5>
                    {{ 'footer.about'|trans }}
                </h5>
                <ul class="nav flex-column">
                    {% if has_page('about') %}
                        <li class="nav-item mb-2">
                            <a class="nav-link p-0 text-muted"
                                href="{{ path('app_page_about') }}">
                                {{ get_title('about') }}
                            </a>
                        </li>
                    {% endif %}
                    {% if app_enable_features %}
                        <li class="nav-item mb-2">
                            <a href="{{ path('app_page_features') }}"
                                class="nav-link p-0 text-muted">
                                {{ 'link.features'|trans }}
                            </a>
                        </li>
                    {% endif %}
                    {% if app_enable_blog %}
                        <li class="nav-item mb-2">
                            <a href="{{ path('app_blog') }}"
                                class="nav-link p-0 text-muted">
                                {{ 'link.blog'|trans }}
                            </a>
                        </li>
                    {% endif %}
                    {% if app_enable_help %}
                        <li class="nav-item mb-2 text-decoration-line-through">
                            {{ 'link.faq'|trans }}
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="col mb-3">
                <h5>
                    {{ 'footer.at_a_glance'|trans }}
                </h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_dashboard') }}"
                            class="nav-link p-0 text-muted">
                            {{ 'link.dashboard'|trans }}
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_import_index') }}"
                            class="nav-link p-0 text-muted">
                            {{ 'link.import'|trans }}
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_export_index') }}"
                            class="nav-link p-0 text-muted">
                            {{ 'link.export'|trans }}
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_statistics_index') }}"
                            class="nav-link p-0 text-muted">
                            {{ 'link.statistics'|trans }}
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col mb-3">
                <h5>
                    {{ 'footer.links'|trans }}
                </h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="{{ path('app_contact') }}"
                            class="nav-link p-0 text-muted">
                            {{ 'link.contact'|trans }}
                        </a>
                    </li>
                    {% if app_enable_terms %}
                        <li class="nav-item mb-2">
                            <a class="nav-link p-0 text-muted"
                                href="{{ path('app_page_terms') }}">
                                {{ get_title('terms') }}
                            </a>
                        </li>
                    {% endif %}
                    {% if has_page('privacy') %}
                        <li class="nav-item mb-2">
                            <a class="nav-link p-0 text-muted"
                                href="{{ path('app_page_privacy') }}">
                                {{ get_title('privacy') }}
                            </a>
                        </li>
                    {% endif %}
                    {% if app_enable_imprint %}
                        <li class="nav-item mb-2">
                            <a class="nav-link p-0 text-muted"
                                href="{{ path('app_page_imprint') }}">
                                {{ get_title('imprint') }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </footer>
{% endblock %}
