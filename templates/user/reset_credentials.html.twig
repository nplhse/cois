{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Reset your password'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>
            {{ 'Reset your password'|trans }}
        </h1>

        <div class="card">
            <div class="card-body">
                <p>
                    {{ 'To proceed you have to set a new password for your account.'|trans }}
                </p>

                {{ form_start(form) }}

                {{ form_row(form.plainPassword) }}

                <div class="float-end">
                    <button class="btn btn-primary">
                        {{ 'Set new password'|trans }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
