{% extends 'base.html.twig' %}

{% block title %}
    {{ 'security.reset.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>
            {{ 'Reset your password'|trans }}
        </h1>

        <div class="card">
            <div class="card-body">
                <p>
                    {{ 'security.reset.message'|trans }}
                </p>

                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}

                <div class="float-end">
                    <button class="btn btn-primary">
                        {{ 'security.reset.button'|trans }}
                    </button>
                </div>

                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
