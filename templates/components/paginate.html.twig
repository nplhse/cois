<div{{ attributes }}>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if this.hasPreviousPage %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ (app.request.pathInfo ~ '?'
                       ~ (app.request.query.all
                       |merge({
                           page: this.getPreviousPage
                       })
                       |url_encode))|e }}">
                        <i class="bi bi-arrow-left"></i>
                        {{ 'Previous'|trans }}
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link"
                       href="#"
                       tabindex="-1"
                       aria-disabled="true">
                        <i class="bi bi-arrow-left"></i>
                        {{ 'Previous'|trans }}
                    </a>
                </li>
            {% endif %}
            {% if this.firstPage %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                    ~ (app.request.query.all
                    |merge({
                        page: 1
                    })
                    |url_encode))|e }}"
                       class="page-link">
                        1
                    </a>
                </li>
                <li class="page-item"><a href="#" class="page-link">...</a></li>
            {% endif %}
            {% for pageNumber in this.nearbyPagesLeft %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                    ~ (app.request.query.all
                    |merge({
                        page: pageNumber
                    })
                    |url_encode))|e }}"
                       class="page-link">
                        {{ pageNumber }}
                    </a>
                </li>
            {% endfor %}
            <li class="page-item active">
                <a href="{{ (app.request.pathInfo ~ '?'
                ~ (app.request.query.all
                |merge({
                    page: this.currentPage
                })
                |url_encode))|e }}"
                   class="page-link active">
                    {{ this.currentPage }}
                </a>
            </li>
            {% for pageNumber in this.nearbyPagesRight %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                    ~ (app.request.query.all
                    |merge({
                        page: pageNumber
                    })
                    |url_encode))|e }}"
                       class="page-link">
                        {{ pageNumber }}
                    </a>
                </li>
            {% endfor %}
            {% if this.hasLastPage %}
                <li class="page-item"><a href="#" class="page-link">...</a></li>
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                    ~ (app.request.query.all
                    |merge({
                        page: this.getLastPage
                    })
                    |url_encode))|e }}"
                       class="page-link">
                        {{ this.getLastPage }}
                    </a>
                </li>
            {% endif %}
            {% if this.hasNextPage %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ (app.request.pathInfo ~ '?'
                       ~ (app.request.query.all
                       |merge({
                           page: this.getNextPage
                       })
                       |url_encode))|e }}">
                        {{ 'Next'|trans }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link"
                       href="#"
                       tabindex="-1"
                       aria-disabled="true">
                        {{ 'Next'|trans }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>
