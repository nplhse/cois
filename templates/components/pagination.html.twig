<nav aria-label="Page navigation">
    {% if total > 1 %}
        <ul class="pagination justify-content-center">
            {% if previous %}
                <li class="page-item">
                    <a class="page-link"
                        href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: previous
                                })
                                |url_encode))|e }}">
                        <i class="bi bi-arrow-left"></i>
                        {{ 'Previous'|trans }}
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link"
                        href="#"
                        tabindex="-1"
                        aria-disabled="true">
                        <i class="bi bi-arrow-left"></i>
                        {{ 'Previous'|trans }}
                    </a>
                </li>
            {% endif %}
            {% if first %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: 1
                                })
                                |url_encode))|e }}"
                        class="page-link">
                        1
                    </a>
                </li>
                <li class="page-item"><a href="#" class="page-link">...</a></li>
            {% endif %}
            {% for pageNumber in nearbyPagesLeft %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: pageNumber
                                })
                                |url_encode))|e }}"
                        class="page-link">
                        {{ pageNumber }}
                    </a>
                </li>
            {% endfor %}
            <li class="page-item active">
                <a href="{{ (app.request.pathInfo ~ '?'
                        ~ (app.request.query.all
                            |merge({
                                page: current
                            })
                            |url_encode))|e }}"
                    class="page-link active">
                    {{ current }}
                </a>
            </li>
            {% for pageNumber in nearbyPagesRight %}
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: pageNumber
                                })
                                |url_encode))|e }}"
                        class="page-link">
                        {{ pageNumber }}
                    </a>
                </li>
            {% endfor %}
            {% if last %}
                <li class="page-item"><a href="#" class="page-link">...</a></li>
                <li class="page-item">
                    <a href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: last
                                })
                                |url_encode))|e }}"
                        class="page-link">
                        {{ last }}
                    </a>
                </li>
            {% endif %}
            {% if next %}
                <li class="page-item">
                    <a class="page-link"
                        href="{{ (app.request.pathInfo ~ '?'
                            ~ (app.request.query.all
                                |merge({
                                    page: next
                                })
                                |url_encode))|e }}">
                        {{ 'Next'|trans }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link"
                        href="#"
                        tabindex="-1"
                        aria-disabled="true">
                        {{ 'Next'|trans }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </li>
            {% endif %}
        </ul>
    {% elseif total == 1 %}
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link"
                    href="#"
                    tabindex="-1"
                    aria-disabled="true">
                    <i class="bi bi-arrow-left"></i>
                    {{ 'Previous'|trans }}
                </a>
            </li>
            <li class="page-item active">
                <a href="{{ (app.request.pathInfo ~ '?'
                        ~ (app.request.query.all
                            |merge({
                                page: 1
                            })
                            |url_encode))|e }}"
                    class="page-link">
                    1
                </a>
            </li>
            <li class="page-item disabled">
                <a class="page-link"
                    href="#"
                    tabindex="-1"
                    aria-disabled="true">
                    {{ 'Next'|trans }}
                    <i class="bi bi-arrow-right"></i>
                </a>
            </li>
        </ul>
    {% endif %}
</nav>
