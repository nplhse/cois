{% apply inky_to_html|inline_css(
    source('@styles/foundation-emails.css'),
    source('@styles/emails.css')
)
%}
<container>
    <row class="header">
        <columns>
            <a href="{{ url('dashboard') }}">Collaborative IVENA statistics</a>
        </columns>
    </row>
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Welcome to Collaborative IVENA statistics
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>
                Please confirm your email address by clicking the following
                link. This link will expire in {{
                    expiresAtMessageKey|trans(
                        expiresAtMessageData,
                        'VerifyEmailBundle'
                    )
                }}.
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ signedUrl }}">Confirm my Email</button>
            </center>
        </columns>
    </row>
    <row class="footer">
        <columns>
            <p>
                Cheers,
            </p>
            <p>
                Your friendly <em>Collaborative IVENA statistics team</em>
            </p>
        </columns>
    </row>
    <row class="bottom">
        <columns>
            <center>
                <spacer size="20"></spacer>
                <div>
                    Sent from Collaborative IVENA statistics.
                </div>
            </center>
        </columns>
    </row>
</container>
{% endapply %}
