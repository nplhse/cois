{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'Hospitals'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_hospital_index'),
                            label: 'Hospitals'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h1>
                {{ 'Hospitals'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Hospitals'|trans({
                        '%perPage%': perPage,
                        '%count%': hospitals.count
                    })
                }}
            </p>

            {% if search %}
                <div class="alert alert-info" role="alert">
                    {{ 'Searching for'|trans }}: "<i>{{ search }}</i>" | <a href="{{
                        path(
                            'app_hospital_index',
                            app.request.query.all|merge({
                                search: '',
                                offset: '0'
                            })
                        )
                        }}">
                        {{ 'Click here to end search'|trans }}
                    </a>
                </div>
            {% endif %}

            {% for hospital in hospitals %}
                <div class="card mb-3">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{
                                path(
                                    'app_hospital_show',
                                    {
                                        id: hospital.id
                                    }
                                )
                                }}">
                                {{ hospital.name }}
                            </a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {{ hospital.owner }}
                        </h6>

                        <p class="m-0">
                            {% if hospital.supplyArea %}
                                <span class="badge bg-primary">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                supplyArea: hospital.supplyArea,
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ hospital.supplyArea }}
                                    </a>
                                </span>
                            {% endif %}

                            {% if hospital.dispatchArea %}
                                <span class="badge bg-primary">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                dispatchArea: hospital.dispatchArea,
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ hospital.dispatchArea }}
                                    </a>
                                </span>
                            {% endif %}

                            {% if hospital.location == 'rural' %}
                                <span class="badge bg-info">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                location: 'rural',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ 'Rural'|trans }}
                                    </a>
                                </span>
                            {% elseif hospital.location == 'urban' %}
                                <span class="badge bg-info">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                location: 'urban',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ 'Urban'|trans }}
                                    </a>
                                </span>
                            {% endif %}

                            {% if hospital.size == 'small' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                size: 'small',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ 'Small'|trans }} ({{ hospital.beds }}
                                        {{ 'Beds'|trans }})
                                    </a>
                                </span>
                            {% elseif hospital.size == 'medium' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                size: 'medium',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ 'Medium'|trans }} ({{
                                            hospital.beds
                                        }}
                                        {{ 'Beds'|trans }})
                                    </a>
                                </span>
                            {% elseif hospital.size == 'large' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-collection"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                size: 'large',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ 'Large'|trans }} ({{ hospital.beds }}
                                        {{ 'Beds'|trans }})
                                    </a>
                                </span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% else %}
                <p class="text-center">
                    {{ 'No Hospitals found'|trans }}
                </p>
            {% endfor %}

            {% if (hospitals|length) > 0 %}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {% if previous >= 0 %}
                            <li class="page-item">
                                <a class="page-link"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            offset: previous
                                        })
                                    )
                                    }}">
                                    {{ 'Previous'|trans }}
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link"
                                    href="#"
                                    tabindex="-1"
                                    aria-disabled="true">
                                    {{ 'Previous'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        {% if next < (hospitals|length) %}
                            <li class="page-item">
                                <a class="page-link"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            offset: next
                                        })
                                    )
                                    }}">
                                    {{ 'Next'|trans }}
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link"
                                    href="#"
                                    tabindex="-1"
                                    aria-disabled="true">
                                    {{ 'Next'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>

        <div class="col-3">
            <div class="card">
                <div class="card-header">
                    {{ 'Filters'|trans({}, 'forms') }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Search'|trans }}
                    </h5>
                    <form>
                        <div class="input-group mb-3">
                            {% if search %}
                                <input type="text"
                                    name="search"
                                    class="form-control"
                                    placeholder="{{ search }}"
                                    aria-label="{{ 'Search'|trans }}" />
                            {% else %}
                                <input type="text"
                                    name="search"
                                    class="form-control"
                                    placeholder="{{ 'Search...'|trans }}"
                                    aria-label="{{ 'Search'|trans }}" />
                            {% endif %}
                            <button type="submit"
                                class="btn btn-outline-secondary">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <h5 class="card-title">
                        {{ 'Filter by SupplyArea'|trans }}
                    </h5>
                    <p>
                        {% for supplyArea in supplyAreas %}
                            {% if supplyArea.supplyArea == filters.supplyArea %}
                                <span class="badge bg-warning">
                                    <i class="bi bi-tag"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                supplyArea: '',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ supplyArea.supplyArea }}
                                    </a>
                                </span>
                            {% else %}
                                <span class="badge bg-primary">
                                    <i class="bi bi-tag"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                supplyArea: supplyArea.supplyArea,
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ supplyArea.supplyArea }}
                                    </a>
                                </span>
                            {% endif %}
                        {% else %}
                            {{ 'No SupplyAreas found'|trans }}
                        {% endfor %}
                    </p>

                    <h5 class="card-title">
                        {{ 'Filter by DispatchArea'|trans }}
                    </h5>
                    <p>
                        {% for dispatchArea in dispatchAreas %}
                            {% if
                                dispatchArea.dispatchArea
                                    == filters.dispatchArea %}
                                <span class="badge bg-warning">
                                    <i class="bi bi-tag"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                dispatchArea: '',
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ dispatchArea.dispatchArea }}
                                    </a>
                                </span>
                            {% else %}
                                <span class="badge bg-primary">
                                    <i class="bi bi-tag"></i>
                                    <a class="link-light"
                                        href="{{
                                        path(
                                            'app_hospital_index',
                                            app.request.query.all|merge({
                                                dispatchArea: dispatchArea.dispatchArea,
                                                offset: '0'
                                            })
                                        )
                                        }}">
                                        {{ dispatchArea.dispatchArea }}
                                    </a>
                                </span>
                            {% endif %}
                        {% else %}
                            {{ 'No DispatchAreas found'|trans }}
                        {% endfor %}
                    </p>

                    <h5 class="card-title">
                        {{ 'Filter by Location'|trans }}
                    </h5>
                    <p class="mb-2">
                        {% if filters.location == 'rural' %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            location: '',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Rural'|trans }}
                                </a>
                            </span>
                        {% else %}
                            <span class="badge bg-info">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            location: 'rural',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Rural'|trans }}
                                </a>
                            </span>
                        {% endif %}

                        {% if filters.location == 'urban' %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            location: '',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Urban'|trans }}
                                </a>
                            </span>
                        {% else %}
                            <span class="badge bg-info">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            location: 'urban',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Urban'|trans }}
                                </a>
                            </span>
                        {% endif %}
                    </p>

                    <h5 class="card-title">
                        {{ 'Filter by Size'|trans }}
                    </h5>
                    <p class="mb-2">
                        {% if filters.size == 'small' %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: '',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Small'|trans }}
                                </a>
                            </span>
                        {% else %}
                            <span class="badge bg-success">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: 'small',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Small'|trans }}
                                </a>
                            </span>
                        {% endif %}

                        {% if filters.size == 'medium' %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: '',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Medium'|trans }}
                                </a>
                            </span>
                        {% else %}
                            <span class="badge bg-success">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: 'medium',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Medium'|trans }}
                                </a>
                            </span>
                        {% endif %}

                        {% if filters.size == 'large' %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: '',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Large'|trans }}
                                </a>
                            </span>
                        {% else %}
                            <span class="badge bg-success">
                                <i class="bi bi-collection"></i>
                                <a class="link-light"
                                    href="{{
                                    path(
                                        'app_hospital_index',
                                        app.request.query.all|merge({
                                            size: 'large',
                                            offset: '0'
                                        })
                                    )
                                    }}">
                                    {{ 'Large'|trans }}
                                </a>
                            </span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
