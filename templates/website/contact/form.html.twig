{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact.form'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                {{
                    component(
                        'breadcrumb',
                        {
                            items: [
                                {
                                    label: 'link.contact'|trans
                                }
                            ]
                        }
                    )
                }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h1>
                    <strong>{{ 'title.contact.form'|trans }}</strong>
                </h1>

                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
