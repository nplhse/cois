                                {{
                                    'title.get_started.table.anonymous'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <th style="width: 22%;">
                                {{
                                    'title.get_started.table.user'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <th style="width: 22%;">
                                {{
                                    'title.get_started.table.participant'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.blog'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.comment'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td></td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.public_stats'|trans(
