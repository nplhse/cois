                                        'app'
                                    )
                                }}
                            </th>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.filtersets'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td></td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.hospitals'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td></td>
                            <td></td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.import_export'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td></td>
                            <td></td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">
                                {{
                                    'title.get_started.table.hospital_stats'|trans(
                                        {},
                                        'app'
                                    )
                                }}
                            </th>
                            <td></td>
                            <td></td>
                            <td>
                                <i class="bi bi-check"
                                    style="width: 24px; height:24px">

                                </i>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p>
                    {{ 'title.get_started.table.questions'|trans({}, 'app') }}
                    <a class="text-decoration-none"
                        href="{{ path('app_contact') }}">
                        {{ 'link.to.contact'|trans({}, 'app') }}
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </main>
{% endblock %}
