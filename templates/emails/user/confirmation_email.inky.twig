{% extends 'emails/base.inky.twig' %}

{% block content %}
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    {{
                        'Welcome to Collaborative IVENA statistics'|trans(
                            [],
                            'emails'
                        )
                    }}
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>
                {{
                    'Please confirm your email address by clicking the following link. This link will expire in'|trans(
                        [],
                        'emails'
                    )
                }}

                {{
                    expiresAtMessageKey|trans(
                        expiresAtMessageData,
                        'VerifyEmailBundle'
                    )
                }}
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ signedUrl }}">
                    {{ 'Confirm my E-Mail address'|trans([], 'emails') }}
                </button>
            </center>
        </columns>
    </row>
{% endblock %}
