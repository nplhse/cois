{% apply inky_to_html
    |inline_css(source('@styles/foundation-emails.css'))
    |inline_css(source('@styles/email.css'))
%}
<container>
    <row class="header">
        <columns>
            <center>
                <a href="{{ url('app_dashboard') }}">
                    {{
                        'Welcome to COIS - Collaborative IVENA statistics.'|trans
                    }}
                </a>
            </center>
        </columns>
    </row>
    <row class="welcome">
        <columns>
            <spacer size="35"></spacer>
            <h1>
                <center>
                    Nice to meet you {{ user.username }}!
                </center>
            </h1>
            <spacer size="10"></spacer>
        </columns>
    </row>
    <spacer size="30"></spacer>
    <row>
        <columns>
            <p>
                Welcome to <strong>
                    COIS - Collaborative IVENA statistics
                </strong>, we are looking forward to your participation in our
                project and can't wait for your first data.
            </p>
            <p>
                An account has been created for you with the username: <strong>
                    {{ user.username }}
                </strong>.
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ link }}">Click here to login</button>
            </center>
        </columns>
    </row>
    <row>
        <columns>
            <p>
                Your initial password should have already been submitted to you
                by the administrator, you will have to change it immediately
                after your first login.
            </p>
        </columns>
    </row>
    <row class="footer">
        <columns>
            <p>
                Cheers,
            </p>
            <p>
                Your friendly <em>COIS-Team</em>
            </p>
        </columns>
    </row>
    <row class="bottom">
        <columns>
            <center>
                <spacer size="20"></spacer>
                <div>
                    <a href="{{ url('app_default') }}">
                        Sent from Collaborative IVENA statistics
                    </a>
                </div>
            </center>
        </columns>
    </row>
</container>
{% endapply %}
