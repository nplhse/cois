{% apply inline_css(source('@css/emails.css')) %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>
            {% block title %}
                {{ app_title }}
            {% endblock %}
        </title>
    </head>
    <body style="margin: 0; padding: 0;">
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td>
                    <table align="center"
                        border="0"
                        cellpadding="0"
                        cellspacing="0"
                        width="600"
                        style="border-collapse: collapse;">
                        <tr>
                            <td style="padding: 10px 0 20px 0;">
                                <h1 class="display-6 text-dark">
                                    <a href="{{ url('app_dashboard') }}">
                                        {{ app_title }}
                                    </a>
                                </h1>
                                <hr />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% block content %}

                                {% endblock %}

                                <p>
                                    {{ 'footer.cheers'|trans({}, 'emails') }}<br />
                                    {{ 'footer.team'|trans({}, 'emails') }}
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small style="color: #c0c0c0">
                                    {{ 'footer.legal'|trans({}, 'emails') }}
                                </small>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>
{% endapply %}
