{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'title.contact.form'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'home'|trans({}, 'breadcrumbs')
                        },
                        {
                            label: 'contact.form'|trans({}, 'breadcrumbs')
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="container">
        <h1>
            <strong>{{ 'title.contact.form'|trans }}</strong>
        </h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                {{ form_widget(form) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
