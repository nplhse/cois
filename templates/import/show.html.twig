{% extends 'base.html.twig' %}

{% block title %}
    Import - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end mb-2">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary disabled"
                    href="#"
                    role="button">
                    Delete import
                </a>
            {% endif %}
            <a class="btn btn-outline-primary"
                href="{{ path('import_index') }}"
                role="button">
                Back to list
            </a>
        </div>
    </div>

    <h2>
        {{ import.caption }} <small>(<i>#{{ import.id }}</i>)</small>
    </h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    Basic information
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Caption
                    </h5>
                    <p>
                        {{ import.caption }}
                    </p>

                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">
                                Contents
                            </h5>
                            <p>
                                {{ import.contents }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h5 class="card-title">
                                Status
                            </h5>
                            <p>
                                {% if import.status == 'finished' %}
                                    <i class="bi bi-check-circle-fill text-success">

                                    </i>
                                {% elseif import.status == 'pending' %}
                                    <div class="spinner-border text-secondary spinner-border-sm"
                                        role="status">
                                        <span class="visually-hidden">
                                            Loading...
                                        </span>
                                    </div>
                                {% elseif import.status == 'processing' %}
                                    <div class="spinner-border text-primary spinner-border-sm"
                                        role="status">
                                        <span class="visually-hidden">
                                            Loading...
                                        </span>
                                    </div>
                                {% elseif import.status == 'failed' %}
                                    <i class="bi bi-exclamation-circle-fill text-warning">

                                    </i>
                                {% endif %}

                                {{ import.status }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    Details
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Error
                    </h5>
                    <p>
                        {{ import.lastError ? import.lastError : 'None' }}
                    </p>

                    <h5 class="card-title">
                        Statistics
                    </h5>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                Number of items
                            </h6>
                            <p>
                                {{ import.itemCount }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                Runtime
                            </h6>
                            <p>
                                {{ import.duration|number_format(5, '.', ',') }}s
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                Times run
                            </h6>
                            <p>
                                {{ import.timesRun }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        Created by
                    </h5>
                    <p>
                        {{ import.user }}
                    </p>

                    <p>
                        Created at: {{ import.createdAt ? import.createdAt|date('d.m.Y H:i:s') : '' }}
                    </p>
                    <p>
                        Last run: {{ import.lastRun ? import.lastRun|date('d.m.Y H:i:s') : '' }}
                    </p>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="card border-warning text-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Debugging
                        </h5>
                        <a href="{{
                            path(
                                'app_files_allocations',
                                {
                                    id: import.id
                                }
                            )
                            }}">
                            Download file
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="d-flex justify-content-end mb-2">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary disabled"
                    href="#"
                    role="button">
                    Delete import
                </a>
            {% endif %}
            <a class="btn btn-outline-primary"
                href="{{ path('import_index') }}"
                role="button">
                Back to list
            </a>
        </div>
    </div>
{% endblock %}
