{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'import.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            label: 'Import'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <h1>
                {{ 'import.list.title'|trans }}
            </h1>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            {{ 'import.fields.id'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'import.fields.caption'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'import.fields.date'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'import.fields.status'|trans }}
                        </th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for import in imports %}
                        <tr>
                            <td scope="col">
                                #{{ import.id }}
                            </td>
                            <td scope="col">
                                {{ import.createdAt|date('d.m.Y H:i') }}
                            </td>
                            <td scope="col">
                                {{ import.caption }}
                            </td>
                            <td scope="col">
                                {% if import.status == 'finished' %}
                                    <i class="bi bi-check-circle-fill text-success">

                                    </i>
                                {% elseif import.status == 'pending' %}
                                    <div class="spinner-border text-secondary spinner-border-sm"
                                        role="status">
                                        <span class="visually-hidden">
                                            {{ 'import.fields.loading'|trans }}
                                        </span>
                                    </div>
                                {% elseif import.status == 'processing' %}
                                    <div class="spinner-border text-primary spinner-border-sm"
                                        role="status">
                                        <span class="visually-hidden">
                                            {{ 'import.fields.loading'|trans }}
                                        </span>
                                    </div>
                                {% elseif import.status == 'failed' %}
                                    <i class="bi bi-exclamation-circle-fill text-warning">

                                    </i>
                                {% endif %}
                            </td>
                            <td scope="col">
                                <a class="btn btn-primary"
                                    href="{{
                                    path(
                                        'app_import_show',
                                        {
                                            id: import.id
                                        }
                                    )
                                    }}"
                                    role="button">
                                    {{ 'import.button.view'|trans }}
                                </a>
                                <a class="btn btn-danger"
                                    href="{{
                                    path(
                                        'app_import_delete',
                                        {
                                            id: import.id
                                        }
                                    )
                                    }}"
                                    role="button">
                                    {{ 'import.button.delete'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td scope="col" colspan="5" class="text-muted">
                                {{ 'import.noUploads'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    {{ 'import.new.title'|trans }}
                </div>
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
