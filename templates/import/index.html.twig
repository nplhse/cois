{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}
{% import '_elements/macro/active_filters.html.twig' as active_filters %}

{% block title %}
    {{ 'import.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            label: 'Import'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h1>
                {{ 'Your Imports'|trans }}
            </h1>

            <p>
                {{
                'Showing count Imports'|trans({
                    '%perPage%': pages.perPage,
                    '%count%': imports.count
                })
                }}
            </p>

            {{ active_filters.render(filters, 'app_import_index') }}

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Caption'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'User'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {% if filters.getFilter('order').value.sortBy == "rowCount" %}
                                {{ 'RowCount'|trans() }}
                            {% elseif filters.getFilter('order').value.sortBy == "skippedRows" %}
                                {{ 'SkippedRows'|trans() }}
                            {% else %}
                                {{ 'Created at'|trans({}, 'forms') }}
                            {% endif %}
                        </th>
                        <th>
                            {{ 'Status'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for import in imports %}
                        {% if import.user.id != app.user.id %}
                            <tr class="table-secondary text-muted">
                        {% elseif not is_granted('edit', import) %}
                            <tr class="table-secondary text-muted">
                        {% else %}
                            <tr>
                        {% endif %}
                                <td>
                                    {{ import.id }}
                                </td>
                                <td>
                                    <a href="{{
                                        path(
                                            'app_import_show',
                                            {
                                                id: import.id
                                            }
                                        )
                                        }}">
                                        {{ import.name }}
                                    </a>
                                </td>
                                <td>
                                    {{ import.user.username }}
                                </td>
                                <td>
                                    {% if import.hospital %}
                                        <a href="{{
                                            path(
                                                'app_hospital_show',
                                                {
                                                    id: import.hospital.id
                                                }
                                            )
                                            }}">
                                            {{ import.hospital }}
                                        </a>
                                    {% else %}
                                        {{ 'Import has no Hospital'|trans }}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if filters.getFilter('order').value.sortBy == "rowCount" %}
                                        {{ import.rowCount }}
                                    {% elseif filters.getFilter('order').value.sortBy == "skippedRows" %}
                                        {{ import.skippedRows }}
                                    {% else %}
                                        {{ import.createdAt|date('d.m.Y H:i') }}
                                    {% endif %}
                                </td>
                                <td>
                                    {{ component('status_polling', { importId: import.id }) }}
                                </td>
                            </tr>
                    {% else %}
                        <tr>
                            <td scope="col" colspan="6" class="text-muted">
                                {{ 'import.noUploads'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                        'Showing Page page of pages'|trans({
                            '%page%': pages.page,
                            '%pages%': pages.last
                        })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                        component(
                            'pagination',
                            {
                                dto: pages
                            }
                        )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_import_index') }}
                </div>
            </div>
        </div>
        <div class="col-3">
            {% if is_granted('create_import', app.user) %}
                <p>
                    <a class="btn btn-success" href="{{ path('app_import_new') }}">
                        <i class="bi bi-plus-circle-fill"></i>
                        {{ 'Import new Data'|trans({}, 'forms') }}
                    </a>
                </p>
            {% endif %}

            <div class="card mb-3">
                <div class="card-header">
                    <i class="bi bi-funnel"></i>
                    {{ 'Filters'|trans({}, 'forms') }}
                </div>
                <div class="card-body">
                    {{ form(searchForm) }}

                    {{ form_start(importForm) }}

                    <div class="mb-3">
                        {{ form_widget(importForm.ownImports) }}

                        {{ form_widget(importForm.ownHospitals) }}
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                        {{ form_row(importForm.hospital) }}

                        {{ form_row(importForm.user) }}
                    {% else %}
                        {% if app.user.hospitals|length > 1 %}
                            {{ form_row(importForm.hospital) }}
                        {% endif %}
                    {% endif %}

                    {{ form_row(importForm.status) }}

                    <div class="row">
                        <div class="col">
                            {{ form_row(importForm.submit) }}
                        </div>
                        <div class="col">
                            <div class="float-end">
                                {{ form_row(importForm.reset) }}
                            </div>
                        </div>
                    </div>

                    {{ form_end(importForm) }}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <i class="bi bi-sort-down"></i> {{ 'Sorting'|trans }}
                </div>
                <div class="card-body">
                    {{ form_start(sortForm) }}

                    {{ form_row(sortForm.sortBy) }}
                    {{ form_row(sortForm.orderBy) }}

                    {{ form_end(sortForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
