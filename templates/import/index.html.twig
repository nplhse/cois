{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}

{% block title %}
    {{ 'import.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            label: 'Import'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h1>
                {{ 'Your Imports'|trans }}
            </h1>

            <p>
                {{
                'Showing count Imports'|trans({
                    '%perPage%': pages.perPage,
                    '%count%': imports.count
                })
                }}
            </p>

            {% if filters.search %}
                <div class="alert alert-info" role="alert">
                    {{ 'Searching for'|trans }}: "<i>{{ filters.search }}</i>" | <a href="{{
                        path(
                            'app_import_index',
                            app.request.query.all|merge({
                                search: '',
                                page: 1
                            })
                        )
                        }}">
                        {{ 'Click here to end search'|trans }}
                    </a>
                </div>
            {% endif %}

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Name'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'User'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Created at'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Status'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for import in imports %}
                        {% if import.hospital != app.user.hospital %}
                            <tr class="table-secondary text-muted">
                        {% else %}
                            <tr>
                        {% endif %}
                                <td>
                                    {{ import.id }}
                                </td>
                                <td>
                                    <a href="{{
                                        path(
                                            'app_import_show',
                                            {
                                                id: import.id
                                            }
                                        )
                                        }}">
                                        {{ import.caption }}
                                    </a>
                                </td>
                                <td>
                                    {{ import.user.username }}
                                </td>
                                <td>
                                    {% if import.hospital %}
                                        <a href="{{
                                            path(
                                                'app_hospital_show',
                                                {
                                                    id: import.hospital.id
                                                }
                                            )
                                            }}">
                                            {{ import.hospital }}
                                        </a>
                                    {% else %}
                                        {{ 'Import has no Hospital'|trans }}
                                    {% endif %}
                                </td>
                                <td>
                                    {{ import.createdAt|date('d.m.Y H:i') }}
                                </td>
                                <td>
                                    {% if import.status == 'finished' %}
                                        <i class="bi bi-check-circle-fill text-success">

                                        </i>
                                    {% elseif import.status == 'pending' %}
                                        <div class="spinner-border text-secondary spinner-border-sm"
                                            role="status">
                                            <span class="visually-hidden">
                                                {{ 'import.fields.loading'|trans }}
                                            </span>
                                        </div>
                                    {% elseif import.status == 'processing' %}
                                        <div class="spinner-border text-primary spinner-border-sm"
                                            role="status">
                                            <span class="visually-hidden">
                                                {{ 'import.fields.loading'|trans }}
                                            </span>
                                        </div>
                                    {% elseif import.status == 'failed' %}
                                        <i class="bi bi-exclamation-circle-fill text-warning">

                                        </i>
                                    {% endif %}
                                </td>
                            </tr>
                    {% else %}
                        <tr>
                            <td scope="col" colspan="6" class="text-muted">
                                {{ 'import.noUploads'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                        'Showing Page page of pages'|trans({
                            '%page%': pages.page,
                            '%pages%': pages.last
                        })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                    pagination.navbar(
                        pages.last,
                        pages.page,
                        pages.previous,
                        pages.next
                    )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_import_index') }}
                </div>
            </div>
        </div>
        <div class="col-3">
            {% if app.user.hospital %}
                <p>
                    <a class="btn btn-primary" href="{{ path('app_import_new') }}">
                        {{ 'Import new Data'|trans({}, 'forms') }}
                    </a>
                </p>
            {% endif %}

            <div class="card">
                <div class="card-header">
                    <i class="bi bi-filter-left"></i>
                    {{ 'Filters'|trans({}, 'forms') }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Search'|trans }}
                    </h5>

                    {{ filter.search(filters.search) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
