{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'View Import'|trans }}: {{ import.name }} (#{{ import.id }}) - {{
        parent()
    }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_import_index'),
                            label: 'Import'|trans
                        },
                        {
                            label: 'View Import'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    {% if is_granted('delete', import) %}
        <div class="float-end">
            {{ include('import/_delete.html.twig') }}
        </div>
    {% endif %}

    <h1>
        {{ 'View Import'|trans }}
        <small class="text-muted">(<i>#{{ import.id }}</i>)</small>
    </h1>

    {% if is_granted('delete', import) %}
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    {{ 'View Import'|trans }}
                </a>
            </li>
            <li class="nav-item">
                {% if import.skippedRows > 0 %}
                    <a class="nav-link"
                        aria-current="page"
                        href="{{
                        path(
                            'app_import_show_skipped',
                            {
                                id: import.id
                            }
                        )
                        }}">
                        {{ 'Skipped rows'|trans }}
                        <span class="badge bg-primary">
                            {{ import.skippedRows }}
                        </span>
                    </a>
                {% else %}
                    <a class="nav-link disabled" aria-current="page" href="#">
                        {{ 'Skipped rows'|trans }}
                        <span class="badge bg-secondary">0</span>
                    </a>
                {% endif %}
            </li>
        </ul>
    {% endif %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    {{ 'Basic information'|trans }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Caption'|trans }}
                    </h5>
                    <p>
                        {{ import.name }}
                    </p>

                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">
                                {{ 'Content'|trans }}
                            </h5>
                            <p>
                                {{ import.type }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h5 class="card-title">
                                {{ 'Status'|trans }}
                            </h5>
                            <p>
                                {{
                                    component(
                                        'status_polling',
                                        {
                                            importId: import.id
                                        }
                                    )
                                }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    {{ 'Import details'|trans }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Statistics'|trans }}
                    </h5>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'Item count'|trans }}
                            </h6>
                            <p>
                                {{ import.rowCount }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'Runtime'|trans }}
                            </h6>
                            <p>
                                {{ import.runtime / 1000 }}s
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'Times run'|trans }}
                            </h6>
                            <p>
                                {{ import.runCount }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'Skipped rows'|trans }}
                            </h6>
                            <p>
                                {{ import.skippedRows }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-secondary mb-3">
                <div class="card-header bg-secondary text-white">
                    {{ 'Import details'|trans }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'Created by'|trans }}
                    </h5>
                    <p>
                        <i class="bi bi-person-fill"></i>
                        <strong>{{ import.user }}</strong>
                    </p>

                    <h5 class="card-title">
                        {{ 'Hospital'|trans }}
                    </h5>
                    <p>
                        <i class="bi bi-house"></i>
                        <strong>
                            <a href="{{
                                path(
                                    'app_hospital_show',
                                    {
                                        id: import.hospital.id
                                    }
                                )
                                }}">
                                {{ import.hospital }}
                            </a>
                        </strong>
                    </p>

                    <h5 class="card-title">
                        {{ 'Timestamps'|trans }}
                    </h5>
                    <p>
                        <i class="bi bi-clock"></i>
                        <strong>{{ 'Created at'|trans }}</strong>
                        {{ import.createdAt
                            ? import.createdAt|date('d.m.Y H:i')
                            : '' }}
                        <br />
                        <i class="bi bi-clock-history"></i>
                        <strong>{{ 'Updated at'|trans }}</strong>
                        {{ import.updatedAt
                            ? import.updatedAt|date('d.m.Y H:i')
                            : '' }}
                    </p>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="card border-warning text-warning mb-3">
                    <div class="card-header bg-warning text-white">
                        {{ 'Debugging'|trans }}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ 'Download'|trans }}
                        </h5>

                        {% if import.filePath == 'dummy/path' %}
                            <p class="text-muted">
                                <i class="bi bi-file-earmark-arrow-down"></i>
                                {{ 'Get original import file'|trans }}
                            </p>
                        {% else %}
                            <p class="text-wrap text-black">
                                <a href="{{
                                    path(
                                        'app_file_import',
                                        {
                                            id: import.id
                                        }
                                    )
                                    }}">
                                    <i class="bi bi-file-earmark-arrow-down">

                                    </i>
                                    {{ 'Get original import file'|trans }}
                                </a>
                            </p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="d-flex justify-content-end mb-2">
        <p>
            <a class="btn btn-outline-secondary"
                href="{{ path('app_import_index') }}"
                role="button">
                {{ 'Back to imports'|trans({}, 'forms') }}
            </a>
            {% if is_granted('filter', import) %}
                <a class="btn btn-secondary"
                    href="{{
                    path(
                        'app_allocation_index',
                        {
                            import: import.id
                        }
                    )
                    }}">
                    <i class="bi bi-filter"></i>
                    {{ 'Show Allocations'|trans }}
                </a>
            {% endif %}
            {% if is_granted('edit', import) %}
                <a class="btn btn-primary"
                    href="{{
                    path(
                        'app_import_edit',
                        {
                            id: import.id
                        }
                    )
                    }}">
                    <i class="bi bi-pencil-fill"></i>
                    {{ 'Edit Import'|trans }}
                </a>
            {% endif %}
        </p>
    </div>
{% endblock %}
