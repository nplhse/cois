{% extends 'data/_data_layout.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}
{% import '_elements/macro/active_filters.html.twig' as active_filters %}

{% block title %}
    {{ 'import.title'|trans }}
{% endblock %}

{% block breadcrumbs %}
    {{
        component(
            'breadcrumb',
            {
                items: [
                    {
                        url: url('app_import_index'),
                        label: 'Import'|trans
                    }
                ]
            }
        )
    }}
{% endblock %}

{% block content %}
    {% if is_granted('create_import', app.user) %}
        <div class="float-end">
            <a class="btn btn-success" href="{{ path('app_import_new') }}">
                <i class="bi bi-plus-circle-fill"></i>
                {{ 'Import new Data'|trans({}, 'forms') }}
            </a>
        </div>
    {% endif %}

    <h1>
        {{ 'Your Imports'|trans }}
    </h1>

    <p>
        {{
            'Showing count Imports'|trans({
                '%perPage%': pages.perPage,
                '%count%': imports.count
            })
        }}
    </p>

    {{ active_filters.render(filters, 'app_import_index') }}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    {{ 'Id'|trans({}, 'forms') }}
                </th>
                <th>
                    {{ 'Caption'|trans({}, 'forms') }}
                </th>
                <th>
                    {{ 'User'|trans({}, 'forms') }}
                </th>
                <th>
                    {{ 'Hospital'|trans({}, 'forms') }}
                </th>
                <th>
                    {% if
                        filters.getFilter('order').value.sortBy == 'rowCount' %}
                        {{ 'RowCount'|trans }}
                    {% elseif
                        filters.getFilter('order').value.sortBy
                            == 'skippedRows' %}
                        {{ 'SkippedRows'|trans }}
                    {% else %}
                        {{ 'Created at'|trans({}, 'forms') }}
                    {% endif %}
                </th>
                <th>
                    {{ 'Status'|trans({}, 'forms') }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for import in imports %}
                <tr>
                    <td>
                        {{ import.id }}
                    </td>
                    <td>
                        <a href="{{
                            path(
                                'app_import_show',
                                {
                                    id: import.id
                                }
                            )
                            }}">
                            {{ import.name }}
                        </a>
                    </td>
                    <td>
                        {{ import.user.username }}
                    </td>
                    <td>
                        {% if import.hospital %}
                            <a href="{{
                                path(
                                    'app_hospital_show',
                                    {
                                        id: import.hospital.id
                                    }
                                )
                                }}">
                                {{ import.hospital }}
                            </a>
                        {% else %}
                            {{ 'Import has no Hospital'|trans }}
                        {% endif %}
                    </td>
                    <td>
                        {% if
                            filters.getFilter('order').value.sortBy
                                == 'rowCount' %}
                            {{ import.rowCount }}
                        {% elseif
                            filters.getFilter('order').value.sortBy
                                == 'skippedRows' %}
                            {{ import.skippedRows }}
                        {% else %}
                            {{ import.createdAt|date('d.m.Y H:i') }}
                        {% endif %}
                    </td>
                    <td>
                        {{
                            component(
                                'status_polling',
                                {
                                    importId: import.id
                                }
                            )
                        }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-muted">
                        {{ 'import.noUploads'|trans }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-2">
            <p class="text-muted">
                {{
                    'Showing Page page of pages'|trans({
                        '%page%': pages.page,
                        '%pages%': pages.last
                    })
                }}
            </p>
        </div>
        <div class="col-8">
            {{
                component(
                    'pagination',
                    {
                        dto: pages
                    }
                )
            }}
        </div>
        <div class="col-2">
            {{ pagination.goTo('app_import_index') }}
        </div>
    </div>
{% endblock %}
