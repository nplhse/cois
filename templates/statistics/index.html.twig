{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'Statistics'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            label: 'Statistics'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-3">
            {{ include('statistics/_statistics_subnav.html.twig') }}
        </div>
        <div class="col">
            <div class="row">
                <h1>
                    {{ 'General'|trans }}
                </h1>

                <div class="col-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <a href="{{ path('app_statistics_gender') }}">
                                <i class="bi bi-gender-ambiguous"
                                    style="font-size: 5rem; color: cornflowerblue;">

                                </i><br />
                                {{ 'Gender'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <a href="{{ path('app_statistics_times') }}">
                                <i class="bi bi-clock"
                                    style="font-size: 5rem; color: cornflowerblue;">

                                </i><br />
                                {{ 'Times'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <a href="{{ path('app_statistics_urgency') }}">
                                <i class="bi bi-exclamation-circle"
                                    style="font-size: 5rem; color: cornflowerblue;">

                                </i><br />
                                {{ 'Urgency'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
