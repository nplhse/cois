{% extends 'base-wide.html.twig' %}

{% block title %}
    Statistics - {{ parent() }}
{% endblock %}

{% block body %}
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('statistics_index') }}">
                Demographics
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('statistics_times') }}">
                Times
            </a>
        </li>
    </ul>

    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    Time of day
                </div>
                <div class="card-body">
                    {{ render_chart(time_of_day_chart) }}
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Weekdays
                </div>
                <div class="card-body">
                    {{ render_chart(weekday_chart) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
