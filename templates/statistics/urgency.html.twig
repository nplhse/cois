{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/active_filters.html.twig' as active_filters %}

{% block title %}
    {{ 'Urgency Statistics'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_statistics_index'),
                            label: 'Statistics'|trans
                        },
                        {
                            label: 'Urgency Statistics'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-3">
            {{ include('statistics/_statistics_subnav.html.twig') }}
        </div>
        <div class="col">
            <div class="float-end">
                <a class="btn btn-primary"
                    data-bs-toggle="collapse"
                    data-action="toggle#switch"
                    href="#collapseFilters"
                    role="button"
                    aria-expanded="false"
                    aria-controls="collapseFilters">
                    <i class="bi bi-sliders"></i> {{ 'Show Filters'|trans }}
                </a>
            </div>

            <h1>
                {{ 'Urgency Statistics'|trans }}
            </h1>

            {{ active_filters.render(filters, 'app_statistics_urgency') }}

            <h2>
                {{ 'Distribution of urgencies'|trans }}
            </h2>

            <div class="row"
                {{
                stimulus_controller(
                    'chart-urgency',
                    {
                        target: '#graph1',
                        data: data
                            |json_encode(constant('JSON_PRETTY_PRINT'))
                            |raw
                    }
                )
                }}>
                <div class="col justify-content-center">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="bi bi-pie-chart"></i>
                            {{ 'Graph'|trans({}, 'forms') }}
                        </div>
                        <div class="card-body">
                            <svg id="graph1"
                                class="m-2"
                                width="200"
                                height="200"></svg>
                        </div>
                    </div>

                    <table class="table table-hover">
                        <thead>
                            <th style="width: 25%;">
                                {{ 'Name'|trans }}
                            </th>
                            <th style="width: 25%;">
                                {{ 'Count'|trans }}
                            </th>
                            <th style="width: 25%;">
                                {{ 'Bar'|trans }}
                            </th>
                            <th style="width: 25%;">
                                {{ 'Percent'|trans }}
                            </th>
                        </thead>
                        <tbody>
                            {% for row in data %}
                                <tr>
                                    <td>
                                        {{ row.label }}
                                    </td>
                                    <td>
                                        {{ row.count }}
                                    </td>
                                    <td>
                                        <svg width="100px" height="25px">
                                            <g class="bars">
                                                <rect fill="#3d5599"
                                                    width="100%"
                                                    height="25"></rect>;<rect fill="#cb4d3e"
                                                    width="{{ row.percent }}px"
                                                    height="25"></rect>
                                            </g>
                                        </svg>
                                    </td>
                                    <td>
                                        {{ row.percent }}%
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-4 collapse" id="collapseFilters">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="bi bi-funnel"></i>
                            {{ 'Filters'|trans({}, 'forms') }}
                        </div>
                        <div class="card-body">
                            {{ form_start(filter_form) }}

                            {{ form_row(filter_form.ownHospital) }}

                            {{ form_row(filter_form.hospital) }}

                            <div class="row">
                                <div class="col">
                                    {{ form_row(filter_form.submit) }}
                                </div>
                                <div class="col">
                                    <div class="float-end">
                                        {{ form_row(filter_form.reset) }}
                                    </div>
                                </div>
                            </div>

                            {{ form_end(filter_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
