{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}

{% block title %}
    {{ 'Imports'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_settings'),
                            label: 'Settings'|trans
                        },
                        {
                            label: 'Imports'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            {{ include('settings/_settings_subnav.html.twig') }}
        </div>
        <div class="col">
            <div class="float-end">
                <a class="btn btn-primary"
                    href="{{ path('app_settings_import_new') }}">
                    {{ 'Create new Import'|trans({}, 'forms') }}
                </a>
            </div>

            <h1>
                {{ 'Imports'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Imports'|trans({
                        '%perPage%': pages.perPage,
                        '%count%': imports.count
                    })
                }}
            </p>

            <div class="card mb-3">
                <div class="card-header">
                    <a data-toggle="collapse"
                        href="#collapse-example"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse-example"
                        aria-expanded="false"
                        class="collapsible d-block">
                        <i class="bi bi-chevron-bar-down float-end collapsed">

                        </i>
                        {{ 'Filters'|trans({}, 'forms') }}
                    </a>
                </div>
                <div id="collapse-example"
                    class="collapse"
                    aria-labelledby="heading-example">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                {{ form(searchForm) }}

                                {{ form_start(sortForm) }}

                                {{ form_row(sortForm.sortBy) }}
                                {{ form_row(sortForm.orderBy) }}

                                {{ form_end(sortForm) }}
                            </div>
                            <div class="col">
                                {{ form_start(importForm) }}

                                {{ form_row(importForm.ownImports) }}

                                {{ form_row(importForm.ownHospitals) }}

                                {{ form_row(importForm.hospital) }}

                                {{ form_row(importForm.owner) }}

                                <div class="row">
                                    <div class="col">
                                        {{ form_row(importForm.submit) }}
                                    </div>
                                    <div class="col">
                                        <div class="float-end">
                                            {{ form_row(importForm.reset) }}
                                        </div>
                                    </div>
                                </div>

                                {{ form_end(importForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Name'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'User'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Created at'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Status'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Actions'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for import in imports %}
                        <tr>
                            <td>
                                {{ import.id }}
                            </td>
                            <td>
                                <a href="{{
                                    path(
                                        'app_settings_import_show',
                                        {
                                            id: import.id
                                        }
                                    )
                                    }}">
                                    {{ import.name }}
                                </a>
                            </td>
                            <td>
                                <a href="{{
                                    path(
                                        'app_settings_user_show',
                                        {
                                            id: import.user.id
                                        }
                                    )
                                    }}">
                                    {{ import.user.username }}
                                </a>
                            </td>
                            <td>
                                {% if import.hospital %}
                                    <a href="{{
                                        path(
                                            'app_settings_hospital_show',
                                            {
                                                id: import.hospital.id
                                            }
                                        )
                                        }}">
                                        {{ import.hospital }}
                                    </a>
                                {% else %}
                                    {{ 'Import has no Hospital'|trans }}
                                {% endif %}
                            </td>
                            <td>
                                {{ import.createdAt|date('d.m.Y H:i') }}
                            </td>
                            <td>
                                {{
                                    component(
                                        'status_polling',
                                        {
                                            importId: import.id
                                        }
                                    )
                                }}
                            </td>
                            <td>
                                <a class="btn btn-outline-primary"
                                    href="{{
                                    path(
                                        'app_settings_import_edit',
                                        {
                                            id: import.id
                                        }
                                    )
                                    }}">
                                    {{ 'Edit'|trans({}, 'forms') }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">
                                {{ 'No Imports found'|trans({}, 'forms') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                            'Showing Page page of pages'|trans({
                                '%page%': pages.page,
                                '%pages%': pages.last
                            })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                        pagination.navbar(
                            pages.last,
                            pages.page,
                            pages.previous,
                            pages.next
                        )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_hospital_index') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
