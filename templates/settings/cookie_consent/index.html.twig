{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}

{% block title %}
    {{ 'Cookie Consent'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_settings'),
                            label: 'Settings'|trans
                        },
                        {
                            label: 'Cookie Consent'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            {{ include('settings/_settings_subnav.html.twig') }}
        </div>
        <div class="col">
            <div class="float-end">
                <a class="btn btn-danger"
                    href="{{ path('app_settings_cookie_consent_revoke') }}">
                    <i class="bi bi-trash"></i>{{ 'Revoke ALL cookie consents'|trans({}, 'forms') }}
                </a>
            </div>

            <h1>
                {{ 'Cookie Consent'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Items'|trans({
                        '%perPage%': pages.perPage,
                        '%count%': cookies.count
                    })
                }}
            </p>

            <div class="card mb-3">
                <div class="card-header">
                    <a data-toggle="collapse"
                        href="#collapse-example"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse-example"
                        aria-expanded="false"
                        class="collapsible d-block">
                        <i class="bi bi-chevron-bar-down float-end collapsed">

                        </i>
                        {{ 'Filters'|trans({}, 'forms') }}
                    </a>
                </div>
                <div id="collapse-example"
                    class="collapse"
                    aria-labelledby="heading-example">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                {{ form(searchForm) }}
                            </div>
                            <div class="col">
                                {{ form_start(sortForm) }}

                                {{ form_row(sortForm.sortBy) }}
                                {{ form_row(sortForm.orderBy) }}

                                {{ form_end(sortForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Lookup key'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Categories'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'IP Address'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Updated at'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for cookie in cookies %}
                        <tr>
                            <td>
                                {{ cookie.id }}
                            </td>
                            <td>
                                {{ cookie.lookupKey }}
                            </td>
                            <td>
                                {% for category in cookie.categories %}
                                    <span class="badge bg-primary">
                                        <i class="bi bi-collection"></i>
                                        {{ category }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td>
                                {{ cookie.ipAddress }}
                            </td>
                            <td>
                                {{
                                    cookie.createdAt|date(
                                        'd.m.Y H:i',
                                        'Europe/Berlin'
                                    )
                                }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">
                                {{ 'No Cookies found'|trans({}, 'forms') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                            'Showing Page page of pages'|trans({
                                '%page%': pages.page,
                                '%pages%': pages.last
                            })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                        pagination.navbar(
                            pages.last,
                            pages.page,
                            pages.previous,
                            pages.next
                        )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_settings_cookie_consent') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
