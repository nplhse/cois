{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}
{% import '_elements/macro/pagination.html.twig' as pagination %}
{% import '_elements/macro/filters.html.twig' as filter %}

{% block title %}
    {{ 'Users'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_settings'),
                            label: 'Settings'|trans
                        },
                        {
                            label: 'Users'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            {{ include('settings/_settings_subnav.html.twig') }}
        </div>
        <div class="col">
            <div class="float-end">
                <a class="btn btn-primary"
                    href="{{ path('app_settings_user_new') }}">
                    {{ 'Create User'|trans({}, 'forms') }}
                </a>
            </div>

            <h1>
                {{ 'Users'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Users'|trans({
                        '%perPage%': pages.perPage,
                        '%count%': users.count
                    })
                }}
            </p>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width: 10%">
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th style="width: 20%">
                            {{ 'Username'|trans({}, 'forms') }}
                        </th>
                        <th style="width: 20%">
                            {{ 'Roles'|trans({}, 'forms') }}
                        </th>
                        <th style="width: 20%">
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        <th style="width: 10%">
                            {{ 'Actions'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                {{ user.id }}
                            </td>
                            <td>
                                <a href="{{
                                    path(
                                        'app_settings_user_show',
                                        {
                                            id: user.id
                                        }
                                    )
                                    }}">
                                    {{ user.username }}
                                </a>
                            </td>
                            <td>
                                {% for role in user.roles|sort %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        <span class="badge bg-primary">
                                            {{
                                                'Administrator'|trans(
                                                    {},
                                                    'forms'
                                                )
                                            }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            {{ 'User'|trans({}, 'forms') }}
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% if user.hospital %}
                                    <span class="badge bg-info">
                                        {{ user.hospital }}
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <a class="btn btn-outline-primary"
                                    href="{{
                                    path(
                                        'app_settings_user_edit',
                                        {
                                            id: user.id
                                        }
                                    )
                                    }}">
                                    {{ 'Edit'|trans({}, 'forms') }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">
                                {{ 'No Users found'|trans({}, 'forms') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-2">
                    <p class="text-muted">
                        {{
                            'Showing Page page of pages'|trans({
                                '%page%': pages.page,
                                '%pages%': pages.last
                            })
                        }}
                    </p>
                </div>
                <div class="col-8">
                    {{
                        pagination.navbar(
                            pages.last,
                            pages.page,
                            pages.previous,
                            pages.next
                        )
                    }}
                </div>
                <div class="col-2">
                    {{ pagination.goTo('app_hospital_index') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
