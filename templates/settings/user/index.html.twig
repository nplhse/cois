{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'Users'|trans }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_settings'),
                            label: 'Settings'|trans
                        },
                        {
                            label: 'Users'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            {{ include('settings/_settings_subnav.html.twig') }}
        </div>
        <div class="col">
            <h1>
                {{ 'Users'|trans }}
            </h1>

            <p>
                {{
                    'Showing count Users'|trans({
                        '%perPage%': perPage,
                        '%count%': users.count
                    })
                }}
            </p>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            {{ 'Id'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Email'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Roles'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Hospital'|trans({}, 'forms') }}
                        </th>
                        <th>
                            {{ 'Actions'|trans({}, 'forms') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                {{ user.id }}
                            </td>
                            <td>
                                <a href="{{
                                    path(
                                        'app_settings_user_show',
                                        {
                                            id: user.id
                                        }
                                    )
                                    }}">
                                    {{ user.email }}
                                </a>
                            </td>
                            <td>
                                {% for role in user.roles|sort %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        <span class="badge bg-primary">
                                            {{
                                                'Administrator'|trans(
                                                    {},
                                                    'forms'
                                                )
                                            }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            {{ 'User'|trans({}, 'forms') }}
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% if user.hospital %}
                                    <span class="badge bg-info">
                                        {{ user.hospital }}
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <a class="btn btn-outline-primary"
                                    href="{{
                                    path(
                                        'app_settings_user_edit',
                                        {
                                            id: user.id
                                        }
                                    )
                                    }}">
                                    {{ 'Edit'|trans({}, 'forms') }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">
                                {{ 'No Users found'|trans({}, 'forms') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            {% if (users|length) > 0 %}
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        {% if previous >= 0 %}
                            <li class="page-item">
                                <a class="page-link"
                                    href="{{
                                    path(
                                        'app_settings_user_index',
                                        app.request.query.all|merge({
                                            offset: previous
                                        })
                                    )
                                    }}">
                                    Previous
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link"
                                    href="#"
                                    tabindex="-1"
                                    aria-disabled="true">
                                    Previous
                                </a>
                            </li>
                        {% endif %}
                        {% if next < (users|length) %}
                            <li class="page-item">
                                <a class="page-link"
                                    href="{{
                                    path(
                                        'app_settings_user_index',
                                        app.request.query.all|merge({
                                            offset: next
                                        })
                                    )
                                    }}">
                                    Next
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link"
                                    href="#"
                                    tabindex="-1"
                                    aria-disabled="true">
                                    Next
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}

            <a class="btn btn-primary"
                href="{{ path('app_settings_user_new') }}">
                {{ 'Create User'|trans({}, 'forms') }}
            </a>
        </div>
    </div>
{% endblock %}
