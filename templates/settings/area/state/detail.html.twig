{% extends 'base.html.twig' %}

{% import '_elements/macro/breadcrumb.html.twig' as breadcrumbs %}

{% block title %}
    {{ 'View State'|trans }}: {{ state.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            {{
                breadcrumbs.render(
                    [
                        {
                            url: url('app_dashboard'),
                            label: 'Home'|trans
                        },
                        {
                            url: url('app_settings'),
                            label: 'Settings'|trans
                        },
                        {
                            url: url('app_settings_area_index'),
                            label: 'Areas'|trans
                        },
                        {
                            label: 'View State'|trans
                        }
                    ]
                )
            }}
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            {{ include('settings/_settings_subnav.html.twig') }}
        </div>
        <div class="col">
            <h1>
                {{ 'View State'|trans }}: {{ state.name }}
            </h1>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="w-25">
                            {{ 'Parameter'|trans }}
                        </th>
                        <th scope="col" class="w-75">
                            {{ 'Value'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            {{ 'Name'|trans }}
                        </th>
                        <td>
                            {{ state.name }}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            {{ 'Dispatch Areas'|trans }}
                        </th>
                        <td>
                            {% if state.dispatchAreas.empty != true %}
                                <ul>
                                    {% for area in state.dispatchAreas %}
                                        <li>
                                            <a href="{{
                                                path(
                                                    'app_settings_area_dispatch_detail',
                                                    {
                                                        id: area.id
                                                    }
                                                )
                                                }}">
                                                {{ area.name }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                {{ 'No DispatchAreas found'|trans }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            {{ 'Supply Areas'|trans }}
                        </th>
                        <td colspan="2">
                            {% if state.supplyAreas.empty != true %}
                                <ul>
                                    {% for area in state.supplyAreas %}
                                        <li>
                                            <a href="{{
                                                path(
                                                    'app_settings_area_supply_detail',
                                                    {
                                                        id: area.id
                                                    }
                                                )
                                                }}">
                                                {{ area.name }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                {{ 'No SupplyAreas found'|trans }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">
                            {{ 'Created at'|trans }}
                        </th>
                        <td>
                            {{
                                state.createdAt|date(
                                    'd.m.Y H:i',
                                    'Europe/Berlin'
                                )
                            }}
                        </td>
                    </tr>
                    {% if state.updatedAt %}
                        <tr>
                            <th scope="row">
                                {{ 'Updated at'|trans }}
                            </th>
                            <td>
                                {{
                                    state.updatedAt|date(
                                        'd.m.Y H:i',
                                        'Europe/Berlin'
                                    )
                                }}
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>

            <div class="btn-group" role="group">
                <a class="btn btn-primary"
                    href="{{
                    path(
                        'app_settings_area_state_edit',
                        {
                            id: state.id
                        }
                    )
                    }}">
                    {{ 'Edit State'|trans({}, 'forms') }}
                </a>
                <a class="btn btn-outline-danger"
                    href="{{
                    path(
                        'app_settings_area_state_delete',
                        {
                            id: state.id
                        }
                    )
                    }}">
                    {{ 'Delete State'|trans({}, 'forms') }}
                </a>
                <a class="btn btn-outline-secondary"
                    href="{{ path('app_settings_area_index') }}">
                    {{ 'Back to list'|trans({}, 'forms') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
