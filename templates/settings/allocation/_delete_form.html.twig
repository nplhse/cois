<form method="post"
    action="{{
    path(
        'app_settings_allocation_delete',
        {
            id: allocation.id
        }
    )
    }}"
    onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ allocation.id) }}" />
    <button class="btn btn-danger">{{ 'Delete'|trans({}, 'forms') }}</button>
</form>
