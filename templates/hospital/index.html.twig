{% extends 'base.html.twig' %}

{% block title %}Hospitals - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Hospitals</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>SupplyArea</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospital in hospitals %}
            <tr>
                <td>{{ hospital.id }}</td>
                <td>{{ hospital.name }}</td>
                <td>{{ hospital.address }}</td>
                <td>{{ hospital.supplyArea }}</td>
                <td>{{ hospital.createdAt ? hospital.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hospital.updatedAt ? hospital.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('hospital_show', {'id': hospital.id}) }}">show</a>
                    <a href="{{ path('hospital_edit', {'id': hospital.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
