{% extends 'base.html.twig' %}

{% block title %}
    {{ hospital.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary"
                    href="{{ path('hospital_edit') }}"
                    role="button">
                    {{ 'hospitals.link_edit'|trans }}
                </a>
            {% endif %}
            <a class="btn btn-outline-primary"
                href="{{ path('hospital_index') }}"
                role="button">
                {{ 'hospitals.link_back'|trans }}
            </a>
        </div>
    </div>

    <h1>
        {{ hospital.name }} <small>(<i>#{{ hospital.id }}</i>)</small>
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    {{ 'hospitals.basics.title'|trans }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'hospitals.address.field'|trans }}
                    </h5>
                    <p>
                        {{ hospital.address|nl2br }}
                    </p>

                    <h5 class="card-title">
                        {{ 'hospitals.areas.title'|trans }}
                    </h5>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'hospitals.supply_area.field'|trans }}
                            </h6>
                            <p>
                                {{ hospital.supplyArea }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">
                                {{ 'hospitals.dispatch_area.field'|trans }}
                            </h6>
                            <p>
                                {{ hospital.dispatchArea }}
                            </p>
                        </div>
                    </div>

                    <h5 class="card-title">
                        {{ 'hospitals.location.field'|trans }}
                    </h5>
                    <p>
                        {{ hospital.location }}
                    </p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    {{ 'hospitals.size.title'|trans }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">
                                {{ 'hospitals.size.field'|trans }}
                            </h5>
                            <p>
                                {{ hospital.size }}
                            </p>
                        </div>
                        <div class="col-6">
                            <h5 class="card-title">
                                {{ 'hospitals.beds.field'|trans }}
                            </h5>
                            <p>
                                {{ hospital.beds }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ 'hospitals.owner.field'|trans }}
                    </h5>
                    <p>
                        {{ hospital.owner }}
                    </p>

                    <p>
                        {{ 'hospitals.created_at.field'|trans }}
                        {{ hospital.createdAt
                            ? hospital.createdAt|date('d.m.Y H:i:s')
                            : '' }}
                    </p>
                    <p>
                        {{ 'hospitals.updated_at.field'|trans }}
                        {{ hospital.updatedAt
                            ? hospital.updatedAt|date('d.m.Y H:i:s')
                            : '' }}
                    </p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    {{ 'hospitals.statistics.title'|trans }}
                </div>
                <div class="card-body">
                    <p>
                        {{
                            'dashboard.allocations.by_hospital'|trans({
                                '%count%': hospital_allocations
                            })
                        }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mb-2">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary"
                    href="{{ path('hospital_edit') }}"
                    role="button">
                    {{ 'hospitals.link_edit'|trans }}
                </a>
            {% endif %}
            <a class="btn btn-outline-primary"
                href="{{ path('hospital_index') }}"
                role="button">
                {{ 'hospitals.link_back'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
