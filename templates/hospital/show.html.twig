{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <h1>Hospital</h1>

    <div class="d-flex justify-content-end mb-2">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary" href="{{ path("hospital_edit") }}" role="button">Edit your hospital</a>
            {% endif %}
            <a class="btn btn-outline-primary" href="{{ path("hospital_index") }}" role="button">Back to list</a>
        </div>
    </div>

    <h2>{{ hospital.name }} <small>(<i>#{{ hospital.id }}</i>)</small></h2>
    <hr />

    <div class="row">
        <div class="col-8">
            <div class="card mb-3">
                <div class="card-header">
                    Basic information
                </div>
                <div class="card-body">
                    <h5 class="card-title">Address</h5>
                    <p>{{ hospital.address|nl2br }}</p>

                    <h5 class="card-title">Areas</h5>
                    <div class="row">
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">Supply Area</h6>
                            <p>{{ hospital.supplyArea }}</p>
                        </div>
                        <div class="col-6">
                            <h6 class="card-subtitle text-muted">Dispatch Area</h6>
                            <p>{{ hospital.dispatchArea }}</p>
                        </div>
                    </div>

                    <h5 class="card-title">Location</h5>
                    <p>{{ hospital.location }}</p>

                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">Size</h5>
                            <p>{{ hospital.size }}</p>
                        </div>
                        <div class="col-6">
                            <h5 class="card-title">Beds</h5>
                            <p>{{ hospital.beds }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    Statistics
                </div>
                <div class="card-body">
                    <p>There are currently <strong>{{ hospital_allocations }}</strong> Allocations, from this hospital.</p>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="card border-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Owner</h5>
                    <p>{{ hospital.owner }}</p>

                    <p>Created at: {{ hospital.createdAt ? hospital.createdAt|date('d.m.Y H:i:s') : '' }}</p>
                    <p>Updated at: {{ hospital.updatedAt ? hospital.updatedAt|date('d.m.Y H:i:s') : '' }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mb-2">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            {% if user_is_owner %}
                <a class="btn btn-outline-primary" href="{{ path("hospital_edit") }}" role="button">Edit your hospital</a>
            {% endif %}
            <a class="btn btn-outline-primary" href="{{ path("hospital_index") }}" role="button">Back to list</a>
        </div>
    </div>
{% endblock %}
