{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <h1>Hospital</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hospital.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hospital.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ hospital.address }}</td>
            </tr>
            <tr>
                <th>SupplyArea</th>
                <td>{{ hospital.supplyArea }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ hospital.createdAt ? hospital.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ hospital.updatedAt ? hospital.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('hospital_index') }}">back to list</a>
{% endblock %}
